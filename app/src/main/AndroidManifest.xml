<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ppui.calculator">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/DefAppTheme">
        <activity
            android:name="com.ppui.calculator.MainActivity"
            android:windowSoftInputMode="stateAlwaysHidden|adjustNothing">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.ppui.calculator.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="com.ppui.calculator.MainActivity" />
        <activity
            android:name="com.ppui.calculator.ThemeActivity"
            android:label="@string/title_activity_theme"
            android:parentActivityName="com.ppui.calculator.SettingsActivity" />
        <activity
            android:name="com.ppui.calculator.AboutActivity"
            android:label="@string/title_activity_about"
            android:parentActivityName="com.ppui.calculator.SettingsActivity" />
        <activity
            android:name="com.ppui.calculator.HistoryActivity"
            android:label="@string/title_activity_history"
            android:parentActivityName="com.ppui.calculator.MainActivity" />
        <activity
            android:name="com.ppui.calculator.GeneralSettingsActivity"
            android:label="@string/title_activity_general_settings"
            android:parentActivityName="com.ppui.calculator.SettingsActivity" />
    </application>

</manifest>